{
    "schemes": [
        "http",
        "https"
    ],
    "swagger": "2.0",
    "info": {
        "description": "Store with promo codes for various stores",
        "title": "Freebie-shop",
        "contact": {
            "name": "Sergey Nekrasov",
            "url": "https://vk.com/serega_nekrasov",
            "email": "79508031750@yandex.ru"
        },
        "version": "1.0"
    },
    "host": "127.0.0.1:8080",
    "basePath": "/",
    "paths": {
        "/store": {
            "get": {
                "description": "Get a list of all stores",
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "Info"
                ],
                "summary": "Get all stores",
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "$ref": "#/definitions/ds.StoreDocs"
                        }
                    },
                    "500": {
                        "description": "Internal Server Error",
                        "schema": {
                            "$ref": "#/definitions/swagger.StoreError"
                        }
                    }
                }
            },
            "post": {
                "description": "Adding a new promo to database",
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "Add"
                ],
                "summary": "Add a new promo",
                "parameters": [
                    {
                        "description": "Магазин",
                        "name": "Promo",
                        "in": "body",
                        "required": true,
                        "schema": {
                            "$ref": "#/definitions/ds.StoreDocs"
                        }
                    }
                ],
                "responses": {
                    "201": {
                        "description": "Created",
                        "schema": {
                            "$ref": "#/definitions/swagger.StoreCreated"
                        }
                    },
                    "400": {
                        "description": "Bad Request",
                        "schema": {
                            "$ref": "#/definitions/swagger.StoreError"
                        }
                    },
                    "500": {
                        "description": "Internal Server Error",
                        "schema": {
                            "$ref": "#/definitions/swagger.StoreError"
                        }
                    }
                }
            }
        },
        "/store/price/{UUID}": {
            "get": {
                "description": "Get price of store by UUID",
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "Info"
                ],
                "summary": "Get price of store",
                "parameters": [
                    {
                        "type": "string",
                        "format": "uuid",
                        "description": "UUID промо",
                        "name": "UUID",
                        "in": "path",
                        "required": true
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "$ref": "#/definitions/swagger.StorePrice"
                        }
                    },
                    "400": {
                        "description": "Bad Request",
                        "schema": {
                            "$ref": "#/definitions/swagger.StoreError"
                        }
                    },
                    "404": {
                        "description": "Not Found",
                        "schema": {
                            "$ref": "#/definitions/swagger.StoreError"
                        }
                    },
                    "500": {
                        "description": "Internal Server Error",
                        "schema": {
                            "$ref": "#/definitions/swagger.StoreError"
                        }
                    }
                }
            }
        },
        "/store/promo/{UUID}": {
            "get": {
                "description": "Get a promo in store using its uuid",
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "Info"
                ],
                "summary": "Get a promo",
                "parameters": [
                    {
                        "type": "string",
                        "format": "uuid",
                        "description": "UUID промо",
                        "name": "UUID",
                        "in": "path",
                        "required": true
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "$ref": "#/definitions/swagger.StorePromo"
                        }
                    },
                    "400": {
                        "description": "Bad Request",
                        "schema": {
                            "$ref": "#/definitions/swagger.StoreError"
                        }
                    },
                    "404": {
                        "description": "Not Found",
                        "schema": {
                            "$ref": "#/definitions/swagger.StoreError"
                        }
                    },
                    "500": {
                        "description": "Internal Server Error",
                        "schema": {
                            "$ref": "#/definitions/swagger.StoreError"
                        }
                    }
                }
            }
        },
        "/store/random": {
            "post": {
                "description": "Adding a new random promo to database",
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "Add"
                ],
                "summary": "Add a new random promo",
                "parameters": [
                    {
                        "description": "Количество",
                        "name": "Quantity",
                        "in": "body",
                        "required": true,
                        "schema": {
                            "$ref": "#/definitions/ds.QuantityStores"
                        }
                    }
                ],
                "responses": {
                    "201": {
                        "description": "Created",
                        "schema": {
                            "$ref": "#/definitions/swagger.StoreCreated"
                        }
                    },
                    "400": {
                        "description": "Bad Request",
                        "schema": {
                            "$ref": "#/definitions/swagger.StoreError"
                        }
                    },
                    "500": {
                        "description": "Internal Server Error",
                        "schema": {
                            "$ref": "#/definitions/swagger.StoreError"
                        }
                    }
                }
            }
        },
        "/store/{UUID}": {
            "put": {
                "description": "Change the promo price using its uuid",
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "Change"
                ],
                "summary": "Change promo price",
                "parameters": [
                    {
                        "type": "string",
                        "format": "uuid",
                        "description": "UUID промо",
                        "name": "UUID",
                        "in": "path",
                        "required": true
                    },
                    {
                        "description": "Новая цена",
                        "name": "Price",
                        "in": "body",
                        "required": true,
                        "schema": {
                            "$ref": "#/definitions/ds.PriceStore"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "$ref": "#/definitions/swagger.StoreChanged"
                        }
                    },
                    "400": {
                        "description": "Bad Request",
                        "schema": {
                            "$ref": "#/definitions/swagger.StoreError"
                        }
                    },
                    "404": {
                        "description": "Not Found",
                        "schema": {
                            "$ref": "#/definitions/swagger.StoreError"
                        }
                    },
                    "500": {
                        "description": "Internal Server Error",
                        "schema": {
                            "$ref": "#/definitions/swagger.StoreError"
                        }
                    }
                }
            },
            "delete": {
                "description": "Delete a store using its uuid",
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "Delete"
                ],
                "summary": "Delete a store",
                "parameters": [
                    {
                        "type": "string",
                        "format": "uuid",
                        "description": "UUID промо",
                        "name": "UUID",
                        "in": "path",
                        "required": true
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "$ref": "#/definitions/swagger.StoreDeleted"
                        }
                    },
                    "400": {
                        "description": "Bad Request",
                        "schema": {
                            "$ref": "#/definitions/swagger.StoreError"
                        }
                    },
                    "404": {
                        "description": "Not Found",
                        "schema": {
                            "$ref": "#/definitions/swagger.StoreError"
                        }
                    },
                    "500": {
                        "description": "Internal Server Error",
                        "schema": {
                            "$ref": "#/definitions/swagger.StoreError"
                        }
                    }
                }
            }
        }
    },
    "definitions": {
        "ds.PriceStore": {
            "type": "object",
            "properties": {
                "price": {
                    "type": "integer",
                    "example": 300
                }
            }
        },
        "ds.QuantityStores": {
            "type": "object",
            "properties": {
                "quantity": {
                    "type": "integer",
                    "example": 10
                }
            }
        },
        "ds.StoreDocs": {
            "type": "object",
            "properties": {
                "discount": {
                    "type": "integer",
                    "example": 400
                },
                "image": {
                    "type": "string",
                    "example": "https://res.cloudinary.com/dh4qv3hob/image/upload/v1667665906/Promos/Five_gioiio.png"
                },
                "name": {
                    "type": "string",
                    "example": "Пятёрочка"
                },
                "price": {
                    "type": "integer",
                    "example": 200
                },
                "promo": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    },
                    "example": [
                        "djzML",
                        "MdUI7",
                        "byP1f"
                    ]
                },
                "quantity": {
                    "type": "integer",
                    "example": 3
                }
            }
        },
        "swagger.StoreChanged": {
            "type": "object",
            "properties": {
                "changed": {
                    "type": "boolean"
                }
            }
        },
        "swagger.StoreCreated": {
            "type": "object",
            "properties": {
                "created": {
                    "description": "success",
                    "type": "boolean"
                }
            }
        },
        "swagger.StoreDeleted": {
            "type": "object",
            "properties": {
                "deleted": {
                    "type": "boolean"
                }
            }
        },
        "swagger.StoreError": {
            "type": "object",
            "properties": {
                "description": {
                    "description": "description",
                    "type": "string"
                },
                "error": {
                    "description": "error",
                    "type": "string"
                },
                "type": {
                    "description": "type",
                    "type": "string"
                }
            }
        },
        "swagger.StorePrice": {
            "type": "object",
            "properties": {
                "price": {
                    "type": "integer",
                    "example": 100
                }
            }
        },
        "swagger.StorePromo": {
            "type": "object",
            "properties": {
                "promo": {
                    "type": "string",
                    "example": "gR3hr"
                }
            }
        }
    }
}